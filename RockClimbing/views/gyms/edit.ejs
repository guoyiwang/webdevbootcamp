<%- include("../partials/header") %>
<div class="container">
    <h1 style="text-align:center">Edit <%= gym.name %></h1>
    <div style="width:30%; margin: 25px auto">
        <form action="/gyms/<%= gym._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="connectlabeltoname">Name</label>
                <input id="connectlabeltoname" class="form-control" type="text" name="gym[name]" value="<%= gym.name %>">
            </div>
            <div class="form-group">
                <label for="connectlabeltoprice">Price</label>
                <input id="connectlabeltoprice" class="form-control" type="number" name="gym[price]" value="<%= gym.price %>">
            </div>
            <div class="form-group">
                <label for="connectlabeltoimage">Image</label>
                <input id="connectlabeltoimage" class="form-control"  type="file" name="image" accept="image/*" >
            </div>
            <div class="form-group">
                <label for="connectlabeltodescription">Description</label>
                <input id="connectlabeltodescription" class="form-control"  type="text" name="gym[description]" value = "<%= gym.description %>" >
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit!</button>
        </form>
        <a href="/gyms">Go Back</a>
    </div>
</div>
<%- include("../partials/footer") %>