<%- include("../partials/header") %>
<div class="container">
    <h1 style="text-align:center">Edit <%= gym.name %></h1>
    <div style="width:30%; margin: 25px auto">
        <form action="/gyms/<%= gym._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input id="name" class="form-control" type="text" name="gym[name]" value="<%= gym.name %>">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input id="price" class="form-control" type="number" name="gym[price]" value="<%= gym.price %>">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input id="location" class="form-control" type="text" name="gym[location]" value="<%= gym.location %>">
            </div>
            <img src = <%=gym.image%> class="card-img-top">
            <label for="image">Image</label>
            <input id="image" class="form-control"  type="file" name="image" accept="image/*" >
            <div class="form-group">
                <label for="description">Description</label>
                <input id="description" class="form-control"  type="text" name="gym[description]" value = "<%= gym.description %>" >
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit!</button>
        </form>
        <a href="/gyms">Go Back</a>
    </div>
</div>
<%- include("../partials/footer") %>