<%- include("../partials/header") %>
<div class="container">
    <h1 style="text-align:center">Creat a new Campground</h1>
    <div style="width:30%; margin: 25px auto">
        <form action="/camgrounds" method="POST">
            <div class="form-group">
                <label for="connectlabeltoname">Name</label>
                <input id="connectlabeltoname" class="form-control" type="text" name="name" placeholder="name">
            </div>
            <div class="form-group">
                <label for="connectlabeltoimage">Image Link</label>
                <input id="connectlabeltoimage" class="form-control"  type="text" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <label for="connectlabeltodescription">Description</label>
                <input id="connectlabeltodescription" class="form-control"  type="text" name="description" placeholder="description">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit!</button>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<%- include("../partials/footer") %>