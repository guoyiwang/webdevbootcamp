<%- include("../partials/header") %>
<div class="container">
    <h1 style="text-align:center">Edit <%= campground.name %></h1>
    <div style="width:30%; margin: 25px auto">
        <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="connectlabeltoname">Name</label>
                <input id="connectlabeltoname" class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <label for="connectlabeltoprice">Price</label>
                <input id="connectlabeltoprice" class="form-control" type="number" name="campground[price]" value="<%= campground.price %>">
            </div>
            <div class="form-group">
                <label for="connectlabeltoimage">Image Link</label>
                <input id="connectlabeltoimage" class="form-control"  type="text" name="campground[image]" value = "<%= campground.image %>" >
            </div>
            <div class="form-group">
                <label for="connectlabeltodescription">Description</label>
                <input id="connectlabeltodescription" class="form-control"  type="text" name="campground[description]" value = "<%= campground.description %>" >
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit!</button>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<%- include("../partials/footer") %>